{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "slug": {
      "type": "uid"
    },
    "isRef": {
      "type": "boolean",
      "required": true
    },
    "url": {
      "type": "string",
      "required": false
    },
    "website": {
      "type": "string",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "content": {
      "type": "richtext"
    }
  }
}
